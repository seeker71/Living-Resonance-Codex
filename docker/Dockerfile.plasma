# âš¡ PLASMA Streaming Pod - Real-Time, Collaborative
FROM python:3.9-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PLASMA_POD_ID=plasma-pod-001
ENV PLASMA_POD_STATE=PLASMA
ENV PLASMA_POD_STREAMS=${PLASMA_POD_STREAMS:-10}
ENV PLASMA_POD_BANDWIDTH=${PLASMA_POD_BANDWIDTH:-1000}

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    git \
    curl \
    redis-tools \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy streaming components
COPY src/core/ src/core/
COPY src/platform/ src/platform/

# Create streaming directories
RUN mkdir -p /app/streams /app/events /app/subscribers

# Create PLASMA startup script
RUN echo '#!/bin/bash\n\
echo "âš¡ PLASMA Pod ${PLASMA_POD_ID} starting..."\n\
echo "State: ${PLASMA_POD_STATE}"\n\
echo "Streams: ${PLASMA_POD_STREAMS}"\n\
echo "Bandwidth: ${PLASMA_POD_BANDWIDTH} MB/s"\n\
\n\
# Initialize streaming engine\n\
echo "ðŸš€ Initializing PLASMA streaming engine..."\n\
python src/core/plasma_streaming.py\n\
\n\
# Start streaming service\n\
echo "ðŸ“¡ Starting PLASMA streaming service..."\n\
python src/platform/plasma_streaming_service.py\n\
\n\
# Keep streaming\n\
while true; do\n\
    echo "âš¡ PLASMA Pod ${PLASMA_POD_ID} - Active streams: $(ls /app/streams | wc -l)"\n\
    sleep 10\n\
done' > /app/start_plasma.sh && chmod +x /app/start_plasma.sh

# Expose ports
EXPOSE 5003 8082 6379

# Health check
HEALTHCHECK --interval=10s --timeout=5s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8082/health || exit 1

# Start PLASMA streaming
CMD ["/app/start_plasma.sh"]
